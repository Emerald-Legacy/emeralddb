{
  "name": "fiveringsdb-node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "yarn build:clean && yarn build:server && yarn build:client",
    "build:clean": "rimraf dist",
    "build:client": "cd client && yarn install && yarn build && cd .. && cp -r client/build dist/public",
    "build:server": "tsc",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "migrate:latest": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "start:all:dev": "concurrently \"yarn start:server:dev\" \"cd client && yarn start\"",
    "start:server:dev": "cross-env NODE_ENV=development sh bin/watch.sh",
    "start": "NODE_ENV=production yarn migrate:latest && node dist/index.js",
    "test": "yarn lint && yarn test:unit && yarn build && ava",
    "test:unit": "yarn build:clean && ava",
    "test:unit:watch": "ava --watch",
    "heroku-prebuild": "cd client && yarn heroku-prebuild && cd .."
  },
  "engines": {
    "node": ">=22.11.0 <25.x"
  },
  "volta": {
    "node": "22.11.0"
  },
  "license": "MIT",
  "dependencies": {
    "@5rdb/api": "file:./apiTypings",
    "@discordjs/builders": "^1.13.1",
    "@discordjs/rest": "^2.4.0",
    "@sentry/node": "^10.38.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.2",
    "@types/passport": "^1.0.17",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "compression": "^1.8.1",
    "concurrently": "^9.1.2",
    "cors": "^2.8.6",
    "cross-env": "^10.1.0",
    "discord-api-types": "^0.38.38",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-security": "^3.0.1",
    "express": "^5.2.1",
    "express-jwt": "^8.5.1",
    "fuse.js": "^7.0.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.2",
    "knex": "^3.1.0",
    "passport": "^0.7.0",
    "pg": "^8.18.0",
    "prettier": "^3.8.1",
    "source-map-support": "^0.5.21",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "yarn": "^1.22.22"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "ava": "^6.2.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2"
  }
}
